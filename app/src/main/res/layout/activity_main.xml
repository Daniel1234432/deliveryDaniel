<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:background="@drawable/f1"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/ic_logp2" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/username_text_input_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        app:endIconMode="clear_text"
        app:helperText=" ">

        <EditText
            android:id="@+id/usuario"
            android:layout_width="260dp"
            android:layout_height="42dp"
            android:background="@drawable/custom_input"
            android:backgroundTint="@color/md_blue_grey_100"
            android:drawableStart="@drawable/ic_person"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint="Usuario"
            android:inputType="textAutoComplete|textEmailAddress"
            android:singleLine="false" />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/password_text_input_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        app:counterEnabled="true"
        app:counterMaxLength="15"
        app:endIconMode="password_toggle"
        app:errorEnabled="true"
        app:errorIconDrawable="@drawable/ic_error"
        app:helperText="Obligatorio*"
        app:helperTextTextColor="@color/md_deep_orange_700">

        <EditText
            android:id="@+id/password"
            android:layout_width="260dp"
            android:layout_height="42dp"
            android:background="@drawable/custom_input"
            android:backgroundTint="@color/md_blue_grey_100"
            android:drawableStart="@drawable/ic_canda"
            android:drawablePadding="12dp"
            android:ems="10"
            android:hint="ContraseÃ±a"
            android:inputType="numberPassword" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/buton"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text="ACCEDER" />


</LinearLayout>